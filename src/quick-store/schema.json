{
    "$schema": "http://json-schema.org/schema",
    "title": "quick-store",
    "type": "object",
    "description": "quick generate store",
    "properties": {
        "name": {
            "type": "string",
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "Enter store name (ex: bonus-setting)"
        },
        "isEnityStore": {
            "type": "boolean",
            "$default": {
                "$source": "argv",
                "index": 1
            },
            "x-prompt": {
                "message": "What kind of store?",
                "type": "list",
                "items": [
                    {
                        "value": true,
                        "label": "Enity Store"
                    },
                    {
                        "value": false,
                        "label": "Store"
                    }
                ]
            }
        }
    },
    "required": [
        "name",
        "isEnityStore"
    ]
}